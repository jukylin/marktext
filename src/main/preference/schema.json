{
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "preference": {
      "description": "Mark Text preference",
      "type": "object",
      "properties": {
        "general": {
          "description": "General preference setting of Mark Text",
          "type": "object",
          "properties": {
            "autoSave": {
              "description": "Automatically save the content being edited.",
              "type": "boolean"
            },
            "autoSaveDelay": {
              "description": "How long do you want to save your document(ms)?",
              "type": "number"
            },
            "titleBarStyle": {
              "description": "The title bar style. the native option will result in a standard gray opaque title bar. `",
              "enum": ["csd", "custom", "native"]
            },
            "openFileInNewWindow": {
              "description": "Open file in new window",
              "type": "boolean"
            },
            "aidou": {
              "description": "Enable aidou",
              "type": "boolean"
            },
            "fileSortBy": {
              "description": "Sort files in opened folder by created time, modified time and title.",
              "enum": ["modified", "created", "title"]
            },
            "startUp": {
              "description": "The action after Mark Text startup, open the last edited content, open the specified folder or blank page",
              "enum": ["folder", "lastState", "blank"]
            },
            "language": {
              "description": "The language Mark Text use.",
              "type": "string"
            }
          }
        },
        "editor": {
          "description": "Editor preference setting in Mark Text",
          "type": "object",
          "properties": {
            "editorFontFamily": {
              "description": "editor font family",
              "enum": ["Open Sans", "Clear Sans", "Helvetica Neue", "Helvetica", "Arial", "sans-serif"]
            },
            "fontSize": {
              "description": "Font size in pixels",
              "type": "number",
              "maximum": 20,
              "minimum": 12,
              "default": 16
            },
            "lineHeight": {
              "description": "Line Height",
              "type": "number",
              "maximum": 2,
              "minimum": 1.2,
              "default": 1.6
            },
            "codeFontSize": {
              "description": "Font size in code Block, the range is 12 ~ 18",
              "type": "number",
              "maximum": 18,
              "minimum": 12,
              "default": 14
            },
            "codeFontFamily": {
              "description": "Font family used in code block",
              "enum": ["DejaVu Sans Mono", "Source Code Pro", "Droid Sans Mono", "monospace"]
            },
            "autoPairBracket": {
              "description": "Automatically brackets when editing",
              "type": "boolean"
            },
            "autoPairMarkdownSyntax": {
              "description": "Autocomplete markdown syntax",
              "type": "boolean"
            },
            "autoPairQuote": {
              "description": "Automatic completion of quotes",
              "type": "boolean"
            },
            "endOfLine": {
              "description": "The newline character used at the end of each line. The default value is default, which will be selected according to your system intelligence.",
              "enum": ["default", "lr", "crlf"]
            },
            "textDirection": {
              "description": "The writing text direction",
              "enum": ["ltr", "rtl"]
            },
            "hideQuickInsertHint": {
              "description": "Hide hint for quickly creating paragraphs",
              "type": "boolean"
            },
            "imageDropAction": {
              "description": "The default behavior after paste or drag the image to Mark Text,",
              "enum": ["upload", "folder", "path"]
            }
          }
        },
        "markdown": {
          "preferLooseListItem": {
            "description": "Mark Text supports create loose and tight lists.",
            "type": "boolean"
          },
          "bulletListMarker": {
            "description": "The marker used in bullet list",
            "enum": ["-", "*", "+"]
          },
          "orderListDelimiter": {
            "description": "The dilimiter used in order list",
            "enum": [".", ")"]
          },
          "preferHeadingStyle": {
            "description": "The prefer heading style in Mark Text",
            "enum": ["atx", "setext"]
          },
          "tabSize": {
            "description": "Replace the tab with x spaces",
            "type": "number"
          },
          "listIndentation": {
            "description": "Select the indent of list",
            "enum": ["dfm", "tab", "1", "2", "3", "4"]
          } 
        },
        "theme": {
          "description": "Select the theme used in Mark Text",
          "type": "string"
        }
      }
    }
  }
}
